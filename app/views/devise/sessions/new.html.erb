<div class="container">    
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title"><%= t('.log_in') %></div>
      </div>     

      <div style="padding-top:30px" class="panel-body" >

        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

          <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }, 
            wrapper: :horizontal_input_group,
            wrapper_mappings: {
              check_boxes: :horizontal_radio_and_checkboxes,
              radio_buttons: :horizontal_radio_and_checkboxes,
              file: :horizontal_file_input,
              boolean: :horizontal_boolean
          } do |f| %>

            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, wrapper: :horizontal_input_group do %>
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <%= f.input_field :email, class: "form-control" %>
              <% end %>
            </div>

            <div class="form-inputs">
              <%= f.input :password, wrapper: :horizontal_input_group do %>
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <%= f.input_field :password, class: "form-control" %>
              <% end %>
            </div>

            <%= f.input :remember_me, as: :boolean, checked_value: true, unchecked_value: false %>

            <div style="margin-top:10px" class="form-group">
              <div class="col-sm-offset-3 col-sm-12">
                 <%= f.submit t('.button_log_in'), class: "btn btn-success col-sm-3" %>
                 <%= link_to t('.button_log_in_facebook'), user_facebook_omniauth_authorize_path, class: "text_white btn btn-primary col-sm-offset-1 col-sm-5" %>                
              </div>
            </div>

            <% if devise_mapping.registerable? && controller_name != 'registrations' %>
              <div class="form-group">
                <div class="col-md-12 control">
                  <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                    <%= t('.not_account') %> 
                    <%= link_to t('.create_account'), new_registration_path(resource_name) %><br />
                  </div>
                </div>
              </div>    
            <% end %>

          <% end %>
        </div>                     
      </div>  
    </div>
  </div>
</div>